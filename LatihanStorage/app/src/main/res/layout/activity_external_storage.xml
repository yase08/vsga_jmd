<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExternalStorageActivity">

    <Button
        android:id="@+id/createfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create File"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/readfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read File"
        app:layout_constraintTop_toBottomOf="@id/createfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updatefile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update File"
        app:layout_constraintTop_toBottomOf="@id/readfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deletefile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete File"
        app:layout_constraintTop_toBottomOf="@id/updatefile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resulttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result of read file"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/deletefile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/resulttt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
